<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:orientation="vertical" >
    <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:paddingRight="5dp" >

        <TextView
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:typeface="sans"
                android:id="@+id/about_title"
                android:paddingLeft="10dp"
                android:background="#FCD9B9"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/about_title" />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/about_authors"
                android:id="@+id/about_authors"
                android:layout_gravity="left|center_vertical"
                android:textStyle="bold"
                android:padding="20dp"/>

        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/developers_logo"
                android:contentDescription="@string/developers_logo"
                android:scaleType="fitCenter"
                android:src="@drawable/logosdesarrolladores"
                android:adjustViewBounds="true" />
        
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/about_team"
                android:id="@+id/about_team"
                android:layout_gravity="left|center_vertical"
                android:textStyle="bold"
                android:padding="20dp" />

		<TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/about_team_members"
                android:id="@+id/about_team_members"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="30dp" />

		<TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/about_more_information"
                android:id="@+id/about_more_information"
                android:layout_gravity="left|center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:textColor="#bbbbbb" />
		
		<RelativeLayout
            android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
			<Button
	        		android:id="@+id/button_call"
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:text="@string/about_phone_number"
	        		android:layout_centerInParent="true" />
	
		</RelativeLayout>
        
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/about_colaboration"
                android:id="@+id/about_colaboration"
                android:layout_gravity="left|center_vertical"
                android:textStyle="bold"
                android:padding="20dp" />

		<TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/about_colaborators"
                android:id="@+id/about_colaborators"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="30dp" />

		<TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/about_financed"
                android:id="@+id/about_financed"
                android:layout_gravity="left|center_vertical"
                android:textStyle="bold"
                android:padding="20dp" />
		
		<ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/about_financers"
                android:contentDescription="@string/about_financers"
                android:scaleType="fitCenter"
                android:src="@drawable/logos"
                android:adjustViewBounds="true" />
		
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/about_description"
                android:id="@+id/about_description"
                android:layout_gravity="left|center_vertical"
                android:textStyle="bold"
                android:padding="10dp" />
        
    </LinearLayout>
    
</ScrollView>