	        android:layout_height="wrap_content"
	        android:paddingLeft="20dp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp" >
	
	        <ImageView
	            android:id="@+id/sport_zone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
