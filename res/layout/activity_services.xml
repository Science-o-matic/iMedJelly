		        android:layout_height="wrap_content"
		        android:text="@string/sportZone"
		        android:paddingLeft="10dp" />
	
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="20dp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp" >
	
	        <ImageView
	            android:id="@+id/surveillance_tower"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/surveillance_tower"
	            android:contentDescription="@string/surveillanceTower" />
	        
	        <TextView
		        android:id="@+id/surveillance_tower_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/surveillanceTower"
		        android:paddingLeft="10dp" />
	
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="20dp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp" >
	
	        <ImageView
	            android:id="@+id/water_source"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/water_source"
	            android:contentDescription="@string/waterSource" />
	        
	        <TextView
		        android:id="@+id/water_source_text"
