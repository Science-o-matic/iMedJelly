<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

        <TextView
	        android:id="@+id/title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="#FCD9B9"
	        android:text="@string/service_legend"
	        android:textSize="30sp"
	        android:paddingLeft="20dp" />
        
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="20dp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp" >
	
	        <ImageView
	            android:id="@+id/bike_parking"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/bike_parking"
	            android:contentDescription="@string/bikeParking" />
	        
	        <TextView
		        android:id="@+id/bike_parking_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/bikeParking"
		        android:paddingLeft="10dp" />
	
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="20dp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp" >
	
	        <ImageView
	            android:id="@+id/blue_flag"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/blue_flag"
	            android:contentDescription="@string/blueFlag" />
	        
	        <TextView
		        android:id="@+id/blue_flag_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/blueFlag"
		        android:paddingLeft="10dp" />
	
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="20dp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp" >
	
	        <ImageView
	            android:id="@+id/children_zone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/children_zone"
	            android:contentDescription="@string/childrenZone" />
	        
	        <TextView
		        android:id="@+id/children_zone_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/childrenZone"
		        android:paddingLeft="10dp" />
	
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="20dp"
			android:paddingTop="10dp"
	        android:paddingBottom="10dp" >
	
	        <ImageView
	            android:id="@+id/dump"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/dump"
	            android:contentDescription="@string/dump" />
	        
	        <TextView
		        android:id="@+id/dump_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/dump"
		        android:paddingLeft="10dp" />
	
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="20dp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp" >
	
	        <ImageView
	            android:id="@+id/handicapped_access"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/handicapped_access"
	            android:contentDescription="@string/handicappedAccess" />
	        
	        <TextView
		        android:id="@+id/handicapped_access_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/handicappedAccess"
		        android:paddingLeft="10dp" />
	
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="20dp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp" >
	
	        <ImageView
	            android:id="@+id/handicapped_friendly"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/handicapped_friendly"
	            android:contentDescription="@string/handicappedFriendly" />
	        
	        <TextView
		        android:id="@+id/handicapped_friendly_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
